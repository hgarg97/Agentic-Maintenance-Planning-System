# ============================================================
# Agentic Maintenance Planning System - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maintenance_db
DB_USER=postgres
DB_PASSWORD=your-db-password

# Gmail (for email functionality)
# Use Gmail App Password: https://support.google.com/accounts/answer/185833
GMAIL_USER=your.email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Vendor Email Addresses (for demo, both can point to same Gmail)
VENDOR_A_EMAIL=vendor.a@example.com
VENDOR_B_EMAIL=vendor.b@example.com

# User Email (for receiving reports from James)
USER_EMAIL=user@example.com
